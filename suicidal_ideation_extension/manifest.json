{
  "manifest_version": 3,
  "name": "Suicidal Ideation Detection",
  "version": "1.0.0",
  "description": "A web extension to detect suicidal ideation in social media text.",
  "icons": {
    "16": "icons/icon16.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "host_permissions": [
    "*://*.reddit.com/*"
  ]
}
